- if user_signed_in?
  = link_to "Sign Out", destroy_user_session_path, method: 'delete'
  - if current_user.post_likes.any?
    %p your posts have #{current_user.post_likes.count} likes
- else
  = link_to "Sign In", new_user_session_path
  = link_to "Register", new_user_registration_path
%h1 Forums
- @forums.each do |forum|
  = link_to forum.name.capitalize, forum_path(forum)